@using AdminPanel.ModelsDb;

@model IEnumerable<PaymentWay>
@{
    Layout = "_AdminLayout";
}

<h2>Payment methods</h2>

<form method="get">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Payment method name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="paymentName" placeholder="Payment method" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" asp-controller="PaymentMethods" asp-action="SearchPaymentMethod" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

@Html.ActionLink("Create New Payment Method", "CreatePaymentMethod", "PaymentMethods", FormMethod.Get)

<table class="table table-hover">
    <thead>
        <tr>
            <th class="col-md-2">ID</th>
            <th class="col-md-8">Name</th>
            <th class="col-md-2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var paymentMethod in @Model)
        {
            <tr>
                <td>@paymentMethod.Id</td>
                <td>@paymentMethod.Name</td>
                <td>
                    <form method="get">
                        <button type="submit" asp-controller="PaymentMethods" asp-action="EditPaymentMethod" class="btn btn-primary btn-sm" asp-route-id="@paymentMethod.Id">Edit</button>
                        <button type="submit" asp-controller="PaymentMethods" asp-action="DeletePaymentMethod" class="btn btn-danger btn-sm" asp-route-id="@paymentMethod.Id">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>