@using AdminPanel.ModelsDb
@model Delivery

@{
    Layout = "_AdminLayout";
}

<h2>Delete Delivery</h2>

<form method="post">
    <div class="form-row">

        <div class="col-md-4 mb-3">
            <label>Delivery Id</label>
            <input type="text" class="form-control" asp-for="@Model.Id" readonly>
        </div>

        <div class="col-md-4 mb-3">
            <label>Delivery Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name" readonly>
        </div>

        <div class="col-md-4 mb-3">
            <label>Delivery Cost</label>
            <input type="text" class="form-control" asp-for="@Model.Cost" readonly>
        </div>

        <div class="col-md-4 mb-3">
            <label>Delivery Description</label>
            <textarea type="text" class="form-control" asp-for="@Model.Description" readonly></textarea>
        </div>

        <button type="submit" asp-controller="Deliveries" asp-action="RemoveDelivery" class="btn btn-danger">Delete</button>
        <button type="submit" asp-controller="Deliveries" asp-action="BackToMenu" class="btn btn-primary">Cancel</button>
    </div>
</form>