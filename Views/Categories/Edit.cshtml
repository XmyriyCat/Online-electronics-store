@using AdminPanel.ModelsDb
@model Category

@{
    Layout = "_AdminLayout";
}

<h2>Edit Category</h2>

<form method="post">
    <div class="form-row">

        <div class="col-md-4 mb-3">
            <label>Id</label>
            <input type="text" class="form-control" asp-for="@Model.Id" readonly>
        </div>

        <div class="col-md-4 mb-3">
            <label>Category Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>

        <button type="submit" asp-controller="Categories" asp-action="SaveCategory" class="btn btn-primary">Edit</button>
        <button type="submit" asp-controller="Categories" asp-action="BackToMenu" class="btn btn-outline-danger">Cancel</button>
    </div>
</form>